NAME = libftprintf.a

SRC = 			print_format.c \
                set_format.c \
                extras.c \
				ft_printf.c \
				print_int.c \
				print_base.c \
				extras2.c \
				print_float.c \
				print_str.c \
				libft/*.c

OBJECTS = *.o \
			libft/*.o

HEADER = libft/libft.h \
			ft_printf.h

all : $(NAME)

$(NAME):
	gcc -Wall -Wextra -Werror -c $(SRC) -I $(HEADER)
		ar rc $(NAME) $(OBJECTS)
		ranlib $(NAME)

clean:
	/bin/rm -f *.o

fclean: clean
	/bin/rm -f $(NAME)

re: fclean all
